@{
    ViewData["Title"] = "Top Provo Restaurants";

}

@model IEnumerable<Restaurant>

<div class="container">
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Restauarant Name</th>
                    <th scope="col">Favorite Dish</th>
                    <th scope="col">Address</th>
                    <th scope="col">Restaurant Phone</th>
                    <th scope="col">Website</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Restaurant r in Model)
                {
                    <tr>
                        <td>@r.RestaurantName</td>
                        <td>@r.FavoriteDish</td>
                        <td>@r.Address</td>
                        <td>@r.RestaurantPhone</td>
                        <td>@r.WebsiteLink</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

